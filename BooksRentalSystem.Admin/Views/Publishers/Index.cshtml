@model IEnumerable<PublisherDetailsOutputModel>

@{
    ViewData["Title"] = "All Publishers";
}

<div class="row">
    <div class="col-lg-4">
        <h2>All Publishers</h2>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Total Book Ads</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var publisher in Model)
        {
            <tr>
                <td>@publisher.Name</td>
                <td>@publisher.PhoneNumber</td>
                <td>@publisher.TotalBookAds</td>
                <td>
                    <a
                        class="btn btn-primary"
                        asp-area=""
                        asp-controller="Publishers"
                        asp-action="Edit"
                        asp-route-id="@publisher.Id">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>